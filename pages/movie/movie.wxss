/* pages/movie/movie.wxss */
@import "../template/template.wxss";
page{
  background-color: #eee;
}
swiper{
  width: 100%;
  height: 400rpx;
}
.movie-banner image{
  width: 100%;
}
.commingSoon-container{
  background-color: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
}
.title{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 38rpx;
}
.title-right{
  font-size: 28rpx;
  color: #b2b2b2;
}
.commingSoon-content{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.commingSoon-content-item image{
  width: 250rpx;
  height: 350rpx;
}
.commingSoon-content-item text{
  display: block;
  font-size: 32rpx;
}
.movie-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.top250{
  background-color: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
}
.top250 .title{
  font-size: 38rpx;
}
.search-movie-container{
  padding: 20rpx 30rpx 0rpx;
}
.search-movie-container input{
  background-color: #fff;
  border-radius: 30rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}
.searchResult{
  background-color: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
}
.seachEmpty{
  font-size: 28rpx;
  color: #b2b2b2;
  display: flex;
  justify-content: center;
  align-items: center
}
