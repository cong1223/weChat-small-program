/* pages/newsDetail.wxss */
.author{
  font-size: 36rpx;
  color: #2b2b2b;
  padding-left: 20rpx;
}
.author-image{
  width: 80rpx;
  height: 80rpx;
}
.public-date{
  font-size: 28rpx;
  color: #8b8b8b;
  padding-left: 20px;
}
.title{
  font-size: 28rpx;
  color: #2b2b2b;
  padding: 0 20rpx 20rpx 20rpx;
  border-bottom: 1rpx solid #b2b2b2;
  margin-bottom: 20rpx;
}
.newsDetailImg{
  width: 100%;
  height: 400rpx; 
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}
.description{
  font-size: 28rpx;
  color: #b2b2b2;
}
.author-info{
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.content{
  font-size: 28rpx;
  padding: 0 20rpx 20rpx 20rpx;
}
.news-share{
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(255, 255, 255, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 100%;
  margin: 30rpx;
}
.news-share image{
  width: 40rpx;
  height: 40rpx;
  position: relative;
}
.news-share button{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  border-radius: 100%;
  opacity: 0;
}