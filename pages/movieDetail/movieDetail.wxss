/* pages/movieDetail/movieDetail.wxss */
@import "../template/template.wxss";
.movie-info-container{
  background-color: #f6f6f6;
  padding:30rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
}
.movie-info-container>image{
  width: 250rpx;
  height: 350rpx;
}
.movie-info{
  padding: 0 0 20rpx 30rpx;
}
.movie-name{
  font-weight: 600;
  display: block;
}
.movie-release{
  font-size: 28rpx;
}
.movie-count image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.movie-count{
  display: flex;
  align-items: center;
}
.movie-count view{
  display: flex;
}
.movie-count view:nth-child(2){
  margin-left: 50rpx;
}
.movie-count text{
  font-size: 28rpx;
}
.movie-description{
  padding: 40rpx 30rpx;
  background-color: #f6f6f6;
  border-bottom: 1rpx solid #ccc;
}
.movie-description .title{
  display: block;
  margin-bottom: 40rpx;
  font-size: 38rpx;
}
.movie-description .content{
  font-size: 28rpx;
}
.movie-actors{
  padding: 40rpx 30rpx;
  background-color: #f6f6f6;
  border-bottom: 1rpx solid #ccc;
}
.movie-actors .title{
  display: block;
  margin-bottom: 40rpx;
  font-size: 38rpx;
}
.actors-item{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.actor-info{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.actor-info image{
  width: 200rpx;
  height: 250rpx;
}
.actor-name{
  font-size: 30rpx;
}